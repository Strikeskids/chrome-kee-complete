{
    "manifest_version": 2,
    "name": "Chrome Kee Complete",
    "version": "0.0.1",

    "description": "Autocomplete passwords from kdbx files in Google Chrome",

    "permissions": [
        "activeTab",
        "declarativeContent"
    ],

    "page_action": {
        "default_title": "Chrome Kee Complete",
        "default_popup": "popup.html"
    },
    "background": {
        "scripts": ["bootstrap.js"],
        "persistent": false
    },

    "commands": {
        "_execute_page_action": {
            "suggested_key": {
                "mac": "Command+Shift+Space",
                "default": "Ctrl+Shift+Space"
            },
        }
    }
}
